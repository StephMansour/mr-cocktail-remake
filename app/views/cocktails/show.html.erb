<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %> : <%= dose.ingredient.name %></p>
  <p><%= link_to "Delete dose", dose_path(dose), method: :delete %></p>
<% end %>

<p><%= link_to "Create a dose", new_cocktail_dose_path(@cocktail) %></p>

<p><%= link_to "Back", cocktails_path %></p>
